{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true, 
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "esnext.asynciterable"],
    "types": ["node", "graphql"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "files": ["src/graphql.d.ts"],
  "include": ["src/**/*", "src/schemas/schema.graphql"],
  "exclude": ["codegen.ts", "dist"]
}
